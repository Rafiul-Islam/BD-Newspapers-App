<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rafiulislamrafi.bdnewspaper" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icona"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".newspaperListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".newspaperDetailActivity"
            android:label="@string/title_newspaper_detail"
            android:parentActivityName=".newspaperListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".newspaperListActivity" />
        </activity>
    </application>

</manifest>
